<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:StudyBug.ViewModels"
             x:Class="StudyBug.Views.Timer"
             Title="{Binding Title}"
             >

    <ContentPage.BindingContext>
        <vm:TimerView/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="TimerDisplay" 
                   HorizontalOptions="CenterAndExpand" 
                   Padding="30" 
                   FontSize="60"
                   VerticalOptions="StartAndExpand"
                   Text="{Binding DisplayEllapsedTime}"/>
            <Picker
                Title="Select Course"
                TitleColor="Black"
                ItemsSource="{Binding Courses}"
                SelectedItem="{Binding SelectedCourse, Mode=TwoWay}"
                />
            <Button x:Name="StartTimer" Text="Start" Command="{Binding StartTimer}"/>
            <Button x:Name="PauseTiemr" Text="Pause" Command="{Binding StopTimer}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>