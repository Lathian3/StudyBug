<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:StudyBug.ViewModels"
             x:Class="StudyBug.Views.Settings"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             >
    <ContentPage.BindingContext>
        <vm:SettingsView/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="App Settings"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <CarouselView
                ItemsSource="{Binding Users}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                IsSwipeEnabled="False"
                >
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="Name" VerticalOptions="Center"/>
                            <Entry Text="{Binding Name}"/>
                            <Label Text="Weekly Goal" VerticalOptions="Center"/>
                            <Entry Text="{Binding WeeklyGoal}"/>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Label Text="Class Settings"
                HorizontalOptions="Center"
                />
            <CarouselView
                ItemsSource="{Binding Courses}"
                CurrentItemChangedCommand="{Binding CourseSelected}"
                CurrentItemChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=CurrentItem}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                >
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Name}" VerticalOptions="Center"/>
                            <Entry Text="{Binding Name}"/>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Button Text="Save Changes" Command="{Binding GotoProfile}"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Add Course"  Command="{Binding AddCommand}"/>
                <Button Text="Delete Course" HorizontalOptions="EndAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>