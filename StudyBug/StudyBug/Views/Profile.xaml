<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:StudyBug.ViewModels" 
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="StudyBug.Views.Profile"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             >

    <ContentPage.BindingContext>
        <vm:ProfileView/>
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding RefreshCommand}" />
        <xct:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding Update}" />
        
    </ContentPage.Behaviors>

    <ContentPage.Content>

        <StackLayout Margin="10">
            <Label  
                Text="{Binding Greeting}"
                FontSize="50"
                Style="{StaticResource Title}"
                />
            <Grid Margin="10"
                  HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="85"/>
                    <RowDefinition Height="85"/>
                    <RowDefinition Height="85"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="85"/>
                </Grid.ColumnDefinitions>
                <ImageButton Source="WelcomeAward.png"
                             Grid.Row="0"
                             Grid.Column="0"
                             Opacity="1"/>
                <ImageButton Source="RibbonOutline.png"
                             Grid.Row="0"
                             Grid.Column="1"
                             Opacity=".5"/>
                <ImageButton Source="Ribbon.png"
                             Grid.Row="0"
                             Grid.Column="2"
                             Opacity=".5"/>
                <ImageButton Source="FancyRibbon.png"
                             Grid.Row="0"
                             Grid.Column="3"
                             Opacity=".5"/>
                <ImageButton Source="outline.png"
                             Grid.Row="1"
                             Grid.Column="0"
                             Opacity=".5"/>
                <ImageButton Source="GoldandPurple.png"
                             Grid.Row="1"
                             Grid.Column="1"
                             Opacity=".5"/>
                <ImageButton Source="GoldPurpleWithBanner.png"
                             Grid.Row="1"
                             Grid.Column="2"
                             Opacity=".5"/>
                <ImageButton Source="GoldPurpleWithWings.png"
                             Grid.Row="1"
                             Grid.Column="3"
                             Opacity=".5"/>
                <ImageButton Source="trophy.png"
                             Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Opacity=".5"/>
                <ImageButton Source="fancyTrophy.png"
                             Grid.Row="2"
                             Grid.Column="2"
                             Grid.ColumnSpan="2"
                             Opacity=".5"/>
            </Grid>
            <StackLayout>
                <CarouselView
                            ItemsSource="{Binding Reminders}"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            BackgroundColor="Transparent"
                            IndicatorView="indicatorView"
                            >
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{StaticResource CourseCard}">

                                <StackLayout>
                                    <Label Text="{Binding CourseName}" 
                                           VerticalOptions="Center"
                                           Style="{StaticResource Large}"/> 

                                    <Label Text="{Binding Content}"
                                           Style="{StaticResource Large}"/>

                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <IndicatorView x:Name="indicatorView"
                               IndicatorColor="white"
                               SelectedIndicatorColor="{DynamicResource ProgressBarColor}"
                               HorizontalOptions="Center" /> 
            </StackLayout>
            <Label Text="Overall Progress"                   
                   FontSize="Large"
                   Style="{StaticResource Title}"/>
            <ProgressBar Progress="{Binding Progress}"
                         ProgressColor="{StaticResource ProgressBarColor}"/>
            <Button Text="App Settings" 
                    Command="{Binding GotoSettings}"
                    Style="{StaticResource ButtonMain}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
